{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Translation Schema",
  "type": "object",
  "required": [
    "error",
    "validation",
    "general",
    "signUp",
    "login",
    "emailConfirmed",
    "home",
    "changeLanguage",
    "bottomTabBar",
    "conversations",
    "chat"
  ],
  "properties": {
    "validation": {
      "type": "object",
      "required": ["fields", "messages"],
      "properties": {
        "fields": {
          "type": "object",
          "required": ["email", "password", "repeatPassword"],
          "properties": {
            "email": { "type": "string" },
            "password": { "type": "string" },
            "repeatPassword": { "type": "string" }
          }
        },
        "messages": {
          "type": "object",
          "required": [
            "required",
            "other",
            "email",
            "min",
            "max",
            "repeatPassword"
          ],
          "properties": {
            "required": { "type": "string" },
            "email": { "type": "string" },
            "other": { "type": "string" },
            "min": { "type": "string" },
            "max": { "type": "string" },
            "repeatPassword": { "type": "string" }
          }
        }
      }
    },
    "general": {
      "type": "object",
      "required": [
        "submit",
        "confirm",
        "cancel",
        "ok",
        "back",
        "areYouSure",
        "noResults"
      ],
      "properties": {
        "submit": { "type": "string" },
        "confirm": { "type": "string" },
        "cancel": { "type": "string" },
        "ok": { "type": "string" },
        "back": { "type": "string" },
        "areYouSure": { "type": "string" },
        "noResults": { "type": "string" }
      }
    },
    "error": {
      "type": "object",
      "required": ["general", "code"],
      "properties": {
        "general": { "type": "string" },
        "code": {
          "type": "object",
          "required": [
            "email_not_confirmed",
            "invalid_credentials",
            "missing_app_schema",
            "over_email_send_rate_limit"
          ],
          "properties": {
            "email_not_confirmed": { "type": "string" },
            "invalid_credentials": { "type": "string" },
            "missing_app_schema": { "type": "string" },
            "over_email_send_rate_limit": { "type": "string" }
          }
        }
      }
    },
    "signUp": {
      "type": "object",
      "required": ["title", "successMessage"],
      "properties": {
        "title": { "type": "string" },
        "successMessage": { "type": "string" }
      }
    },
    "login": {
      "type": "object",
      "required": ["dontHaveAccount"],
      "properties": {
        "dontHaveAccount": { "type": "string" }
      }
    },
    "emailConfirmed": {
      "type": "object",
      "required": ["title", "message", "backToLogin"],
      "properties": {
        "title": { "type": "string" },
        "message": { "type": "string" },
        "backToLogin": { "type": "string" }
      }
    },
    "home": {
      "type": "object",
      "required": ["logOut"],
      "properties": {
        "logOut": { "type": "string" }
      }
    },
    "changeLanguage": {
      "type": "object",
      "required": ["title", "languageName", "alertMessage"],
      "properties": {
        "title": { "type": "string" },
        "languageName": { "type": "string" },
        "alertMessage": { "type": "string" }
      }
    },
    "bottomTabBar": {
      "type": "object",
      "required": ["index", "message"],
      "properties": {
        "index": { "type": "string" },
        "message": { "type": "string" }
      }
    },
    "conversations": {
      "type": "object",
      "required": ["title", "noResults", "noMessages"],
      "properties": {
        "title": { "type": "string" },
        "noMessages": { "type": "string" },
        "noResults": {
          "type": "object",
          "required": ["message", "action"],
          "properties": {
            "message": { "type": "string" },
            "action": { "type": "string" }
          }
        }
      }
    },
    "chat": {
      "type": "object",
      "required": ["title", "inputPlaceholder"],
      "properties": {
        "title": { "type": "string" },
        "inputPlaceholder": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
