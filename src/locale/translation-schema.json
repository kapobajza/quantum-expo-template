{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Translation Schema",
  "type": "object",
  "required": [
    "error",
    "validation",
    "general",
    "signUp",
    "login",
    "emailConfirmed",
    "home"
  ],
  "properties": {
    "validation": {
      "type": "object",
      "required": ["fields", "messages"],
      "properties": {
        "fields": {
          "type": "object",
          "required": ["email", "password", "repeatPassword"],
          "properties": {
            "email": { "type": "string" },
            "password": { "type": "string" },
            "repeatPassword": { "type": "string" }
          }
        },
        "messages": {
          "type": "object",
          "required": [
            "required",
            "other",
            "email",
            "min",
            "max",
            "repeatPassword"
          ],
          "properties": {
            "required": { "type": "string" },
            "email": { "type": "string" },
            "other": { "type": "string" },
            "min": { "type": "string" },
            "max": { "type": "string" },
            "repeatPassword": { "type": "string" }
          }
        }
      }
    },
    "general": {
      "type": "object",
      "required": ["submit", "confirm", "cancel", "ok", "back"],
      "properties": {
        "submit": { "type": "string" },
        "confirm": { "type": "string" },
        "cancel": { "type": "string" },
        "ok": { "type": "string" },
        "back": { "type": "string" }
      }
    },
    "error": {
      "type": "object",
      "required": ["general", "code"],
      "properties": {
        "general": { "type": "string" },
        "code": {
          "type": "object",
          "required": [
            "email_not_confirmed",
            "invalid_credentials",
            "missing_app_schema"
          ],
          "properties": {
            "email_not_confirmed": { "type": "string" },
            "invalid_credentials": { "type": "string" },
            "missing_app_schema": { "type": "string" }
          }
        }
      }
    },
    "signUp": {
      "type": "object",
      "required": ["title", "successMessage"],
      "properties": {
        "title": { "type": "string" },
        "successMessage": { "type": "string" }
      }
    },
    "login": {
      "type": "object",
      "required": ["dontHaveAccount"],
      "properties": {
        "dontHaveAccount": { "type": "string" }
      }
    },
    "emailConfirmed": {
      "type": "object",
      "required": ["title", "message", "backToLogin"],
      "properties": {
        "title": { "type": "string" },
        "message": { "type": "string" },
        "backToLogin": { "type": "string" }
      }
    },
    "home": {
      "type": "object",
      "required": ["logOut"],
      "properties": {
        "logOut": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
