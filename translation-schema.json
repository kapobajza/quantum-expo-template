{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Translation Schema",
  "type": "object",
  "required": ["error", "validation", "general"],
  "properties": {
    "validation": {
      "type": "object",
      "required": ["fields", "messages"],
      "properties": {
        "fields": {
          "type": "object",
          "required": ["email", "firstName", "lastName"],
          "properties": {
            "email": { "type": "string" },
            "firstName": { "type": "string" },
            "lastName": { "type": "string" }
          }
        },
        "messages": {
          "type": "object",
          "required": ["required", "other", "email", "min", "max"],
          "properties": {
            "required": { "type": "string" },
            "email": { "type": "string" },
            "other": { "type": "string" },
            "min": { "type": "string" },
            "max": { "type": "string" }
          }
        }
      }
    },
    "general": {
      "type": "object",
      "required": ["submit", "confirm", "cancel", "ok", "back"],
      "properties": {
        "submit": { "type": "string" },
        "confirm": { "type": "string" },
        "cancel": { "type": "string" },
        "ok": { "type": "string" },
        "back": { "type": "string" }
      }
    },
    "error": {
      "type": "object",
      "required": ["general", "code"],
      "properties": {
        "general": { "type": "string" },
        "code": {
          "type": "object",
          "required": [
            "unknownError",
            "forbiddenError",
            "badRequestError",
            "validationError",
            "unauthorizedError"
          ],
          "properties": {
            "unknownError": { "type": "string" },
            "forbiddenError": { "type": "string" },
            "badRequestError": { "type": "string" },
            "validationError": { "type": "string" },
            "unauthorizedError": { "type": "string" }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
